<Page x:Class="PetShop.Pages.ListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="40"></RowDefinition>
        </Grid.RowDefinitions>


        <Grid Grid.Row="1" >
            <Button Content="Назад" Margin="20,0,0,0" Width="60" Click="Button_Click"
                    VerticalAlignment="Center" HorizontalAlignment="Left"></Button>
            
        </Grid>

        <ListView Grid.Row="0"></ListView>


    </Grid>
</Page>
