<Page x:Class="PetShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Страница логина">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин: " FontSize="15" VerticalAlignment="Center" HorizontalAlignment="Center">
            </TextBlock>

            <TextBox x:Name="LoginTB" Height="22" Width="200" FontSize="15"
                         VerticalAlignment="Center" HorizontalAlignment="Center"></TextBox>

            <TextBlock Text="Пароль: " FontSize="15" Margin="0,15,0,0"
                       VerticalAlignment="Center" HorizontalAlignment="Center">
            </TextBlock>
            
            <PasswordBox x:Name="PasswordPB" Height="22" Width="200" FontSize="13"
                         VerticalAlignment="Center" HorizontalAlignment="Center"></PasswordBox>

            <Button x:Name="LoginButton" Content="ВОЙТИ" Margin="0,15,0,0" Click="LoginButton_Click"
                ></Button>
            <Button x:Name="GuestButton" Content="ГОСТЬ" Margin="0,15,0,0" Click="GuestButton_Click"
                ></Button>
            
        </StackPanel>
    </Grid>
</Page>
